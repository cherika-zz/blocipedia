<h1>All Wikis</h1>

<div class="col-md-8">
  <% @wikis.each do |wiki| %>
    <div class="media">
      <div class="media-body">
        <h4 class="meadia-heading">
          <%= link_to wiki.title, wiki %>
        </h4>
      </div>
    </div>  
  <% end %>
</div>


<div class="col-md-4">
  <% if policy(Wiki.new).create? %>
    <%= link_to "New", new_wiki_path, class: 'btn btn-success' %>
  <% end %>
</div>



<h1>New Wiki</h1>

 <div class="row">
   <div class="col-md-8">
     <%= form_for @wiki do |f| %>
       <div class="form-group">
         <%= f.label :title %>
         <%= f.text_field :title, class: 'form-control', placeholder: "Enter wiki title" %>
       </div>
       <div class="form-group">
         <%= f.label :body %>
         <%= f.hidden_field :body, value: @wiki.body, id: "editor-text-area" %>
         <div id="epiceditor"></div>
       </div>



        <%= render partial: 'form' %>

       <div class="form-group">
         <%= f.submit "Save", class: 'btn btn-success' %>
       </div>
     <% end %>
   </div>
 </div>


<div id="epiceditor"></div>
